# Development Dockerfile for PlatePilot Go services
# Uses Air for hot reloading

FROM golang:1.24-alpine

# Install development tools
RUN apk add --no-cache git ca-certificates tzdata curl

# Install Air for hot reload (pinned to v1.61.0 for Go 1.24 compatibility)
RUN go install github.com/air-verse/air@v1.61.0

# Install golang-migrate for running migrations
RUN go install -tags 'postgres' github.com/golang-migrate/migrate/v4/cmd/migrate@latest

# Install grpc-health-probe for container health checks
RUN GRPC_HEALTH_PROBE_VERSION=v0.4.37 && \
    wget -qO/bin/grpc_health_probe https://github.com/grpc-ecosystem/grpc-health-probe/releases/download/${GRPC_HEALTH_PROBE_VERSION}/grpc_health_probe-linux-amd64 && \
    chmod +x /bin/grpc_health_probe

WORKDIR /app

# Create tmp directories for air hot reload
RUN mkdir -p /app/tmp/recipe-api /app/tmp/mealplanner-api /app/tmp/mobile-bff

# Copy go mod files first for dependency caching
COPY go.mod go.sum ./
RUN go mod download

# Source code will be mounted as volume
# Air will handle rebuilding on changes
